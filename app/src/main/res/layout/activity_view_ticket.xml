<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ViewTicket">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket information"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/readdataBtn"
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:text="VIEW TICKET"
                android:backgroundTint="@color/teal_200"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/textView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/readdataBtn"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Departure -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/readdataBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:text="Departure:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp" />

                <TextView
                    android:id="@+id/tvDeparture"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp" />
            </LinearLayout>

            <!-- Destination -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/readdataBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:translationY="40dp">

                <TextView
                    android:text="Destination:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp" />

                <TextView
                    android:id="@+id/tvDestination"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp" />
            </LinearLayout>

            <!-- Date -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/readdataBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:translationY="80dp">

                <TextView
                    android:text="Date:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp" />
            </LinearLayout>

            <!-- Time -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/readdataBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:translationY="120dp">

                <TextView
                    android:text="Time:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp" />

                <TextView
                    android:id="@+id/tvTime"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp" />
            </LinearLayout>

            <!-- Name -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/readdataBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:translationY="160dp">

                <TextView
                    android:text="Name:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp" />

                <TextView
                    android:id="@+id/tvName"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp" />
            </LinearLayout>

            <!-- Status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/readdataBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:translationY="200dp">

                <TextView
                    android:text="Status:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp" />
            </LinearLayout>

            <!-- Mpesa -->
            <LinearLayout
                android:id="@+id/theLast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/readdataBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:translationY="240dp">

                <TextView
                    android:text="Mpesa number:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp" />

                <TextView
                    android:id="@+id/tvMpesaNumber"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/qr_code"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/shape"
                android:scaleType="fitCenter"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/theLast"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
